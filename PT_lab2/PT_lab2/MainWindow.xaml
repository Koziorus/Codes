<Window x:Class="PT_lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PT_lab2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel Margin="0,0,742,388">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="File">
                    <MenuItem Header="Open" Click="browseFiles"/>
                    <MenuItem Header="Exit" Click="exitFromProgram" />
                </MenuItem>
            </Menu>
        </DockPanel>
        <TreeView Margin="10,0,0,0" Name="FileTree" HorizontalAlignment="Left" VerticalAlignment="Center" Width="255" Height="331" SelectedItemChanged="new_tree_file_selected">

        </TreeView>
        <StatusBar Margin="0,377,0,0">
            <StatusBarItem>
                <TextBlock Name="StatusText" Text="" />
            </StatusBarItem>
        </StatusBar>
        <ScrollViewer Margin="270,52,10,63">
            <TextBox Name="TextArea"  Text=""  TextWrapping="Wrap" />
        </ScrollViewer>
    </Grid>

</Window>
